    body
        .wrapper
            header.header.header__blog
                .header__top
                    .header__left
                       include ../common/_socials
                    .header__right
                       include ../common/_menu
                .header__hero
                    .about-dev__photo-wrap
                        img.about-dev__photo-img(src='assets/img/photo.jpg' alt=name)
                    .base-title.hero__title=title
                    .hero__text Статьи которые я написал
                    .header__blog-bg
                        +svg('header__blog-svg','blog_header')
                .header__triangle
                    a.header__link-arrow(href='#')
                        +svg('link_arrow-down','portf_arrow_down')
                    svg(xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 1000 85"
                        preserveAspectRatio="none"
                        class="triangle-blog"
                        )
                        polygon(class="left" points="0,0   0,86   500.8,86   500.8,84.5")
                        polygon(class="right" points="1000,0   1000,86   500,86   500,84.5")
            section.blog
                .blog-wrap
                    .blog__left
                        .blog-nav
                            a.blog-nav__btn(href="#")
                            ul.blog-nav__list
